<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.tipCalculator" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey_900</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BotaoPadrao">
        <item name="android:background">@drawable/rounded_button_dark</item>
        <item name="android:textColor">@color/grey_100</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="TextoPadrao">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextoEdit">
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="TextoSecundario">
        <item name="android:textColor">@color/grey_200</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="Toolbar">
        <item name="backgroundTint">@color/grey_900</item>
        <item name="android:textColor">@color/grey_100</item>

    </style>

    <color name="iconeBotao">@color/blue_200</color>
    <color name="rounded_bg">@color/grey_500</color>
    <color name="hint">@color/grey_700</color>

</resources>